<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:background="#22ff47"
    tools:context="com.example.shahajalalsamrat.mycountryprofile.MainActivity">

    <Button
        android:id="@+id/bangladeshbuttonid"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bangladeshButton"
        android:textSize="20sp"
        android:drawableLeft="@drawable/bangladeshflug"
        android:textStyle="bold"

        />
    <Button
        android:id="@+id/indiabuttonid"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/indiaButton"
        android:textSize="20sp"
        android:drawableLeft="@drawable/indianflug"
        android:textStyle="bold"

        />
    <Button
        android:id="@+id/pakistanbuttonid"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pakistaButton"
        android:textSize="20sp"
        android:drawableLeft="@drawable/pakistanflug"
        android:textStyle="bold"

        />


</LinearLayout>
